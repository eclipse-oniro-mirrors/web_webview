import("//build/ohos.gni")

SUBSYSTEM_DIR = "//base/web/webview"

config("web_public_config") {
  visibility = [ ":*" ]
  include_dirs = [
    "$SUBSYSTEM_DIR/interfaces/kits/napi/common",
    "$SUBSYSTEM_DIR/interfaces/kits/napi/webdatabase",
    "$SUBSYSTEM_DIR/interfaces/kits/napi/webstorage",
  ]
}

ohos_shared_library("web_napi") {
  include_dirs = [
    "//foundation/arkui/napi/interfaces/kits",
    "//utils/system/safwk/native/include",
  ]
  public_configs = [ ":web_public_config" ]

  sources = [
    "$SUBSYSTEM_DIR/interfaces/kits/napi/common/napi_webview_native_module.cpp",
    "$SUBSYSTEM_DIR/interfaces/kits/napi/webdatabase/napi_web_data_base.cpp",
    "$SUBSYSTEM_DIR/interfaces/kits/napi/webstorage/napi_web_storage.cpp",
  ]

  deps = [
    "//foundation/arkui/napi:ace_napi",
    "//third_party/libuv:uv",
  ]

  external_deps = [
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "webview:libnweb",
  ]

  relative_install_dir = "module"

  part_name = "webview"
  subsystem_name = "web"
}
