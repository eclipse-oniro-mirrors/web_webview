import("//build/ohos.gni")

config("web_inner_kit_config") {
  include_dirs = [ "include" ]
}

ohos_shared_library("web_inner_kit") {
  branch_protector_ret = "pac_ret"
  branch_protector_frt = "bti"

  include_dirs = [ "../../ohos_nweb/include" ]

  public_configs = [ ":web_inner_kit_config" ]

  sources = [ "src/web_clipboard_controller.cpp" ]

  external_deps = [
    "ability_base:zuri",
    "c_utils:utils",
    "hilog:libhilog",
    "image_framework:image_native",
    "pasteboard:pasteboard_client",
  ]

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
  ]

  part_name = "webview"
  subsystem_name = "web"
}
