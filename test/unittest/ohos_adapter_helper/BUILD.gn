import("//base/web/webview/web_aafwk.gni")
import("//build/test.gni")
import("$webview_path/config.gni")

module_output_path = "web/webview"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [ "../common" ]

  if (webview_print_enable) {
    defines = [ "NWEB_PRINT_ENABLE" ]
  }
}

ohos_unittest("ohos_adapter_helper_test") {
  module_out_path = module_output_path

  sources = [
    "../common/nweb_create_window.cpp",
    "ohos_adapter_helper_test.cpp",
  ]

  configs = [ ":module_private_config" ]

  deps = [
    "../../../ohos_adapter:nweb_ohos_adapter",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:want",
    "ability_runtime:ability_context_native",
    "ability_runtime:ability_manager",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "graphic_2d:window_animation",
    "graphic_surface:surface",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "image_framework:image",
    "image_framework:image_native",
    "imf:inputmethod_client",
    "input:libmmi-client",
    "ipc:ipc_core",
    "napi:ace_napi",
    "resource_management:global_resmgr",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
    "webview:libnweb",
  ]
}
group("unittest") {
  testonly = true
  deps = [ ":ohos_adapter_helper_test" ]
}
