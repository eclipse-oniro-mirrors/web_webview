import("//base/web/webview/web_aafwk.gni")
import("//build/test.gni")

module_output_path = "webview/webview"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs =
      [ "$webview_path/ohos_adapter/migration_manager_adapter/include" ]
}

ohos_unittest("migration_manager_adapter_test") {
  module_out_path = module_output_path

  sources = [ "migration_manager_adapter_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [ "$webview_path/ohos_adapter:nweb_ohos_adapter" ]

  external_deps = [
    "ability_runtime:ability_connect_callback_stub",
    "ability_runtime:ability_manager",
    "c_utils:utils",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":migration_manager_adapter_test" ]
}
