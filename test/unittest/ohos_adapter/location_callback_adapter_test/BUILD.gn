import("//build/test.gni")
import("../../../../config.gni")
import("../../../../web_aafwk.gni")

module_output_path = "web/webview"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [ "../../../../ohos_adapter/location_adapter/include" ]
}

ohos_unittest("location_callback_adapter_test") {
  module_out_path = module_output_path

  sources = [ "location_callback_adapter_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "../../../../ohos_adapter:nweb_ohos_adapter",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]

  if (webview_location_enable) {
    external_deps += [
      "location:lbsservice_common",
      "location:locator_sdk",
    ]
  }
}

group("unittest") {
  testonly = true
  deps = []
  if (webview_location_enable) {
    deps += [ ":location_callback_adapter_test" ]
  }
}
