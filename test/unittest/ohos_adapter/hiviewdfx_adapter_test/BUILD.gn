import("//base/web/webview/web_aafwk.gni")
import("//build/test.gni")

module_output_path = "web/webview"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [ "$webview_path/ohos_adapter/hiviewdfx_adapter/include" ]
}

ohos_unittest("nweb_hiviewdfx_adapter_test") {
  module_out_path = module_output_path

  sources = [ "hiviewdfx_adapter_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "../../../../ohos_adapter:nweb_ohos_adapter",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "hitrace:hitrace_meter",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":nweb_hiviewdfx_adapter_test" ]
}
