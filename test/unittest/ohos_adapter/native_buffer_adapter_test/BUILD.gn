import("//build/test.gni")

module_output_path = "web/webview"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs =
      [ "../../../../ohos_adapter/ohos_native_buffer_adapter/include" ]
}

ohos_unittest("native_buffer_adapter_test") {
