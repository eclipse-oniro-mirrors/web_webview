  sources = [
    "arkweb_interface_test.cpp"
  ]

  include_dirs = [ "../common" ]

  deps = [
    "$webview_path/interfaces/native:ohweb",
    "$webview_path/ohos_nweb:web_configs",
  ]

  external_deps = [
