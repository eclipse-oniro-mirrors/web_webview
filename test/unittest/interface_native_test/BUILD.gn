    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "graphic_2d:librender_service_client",
    "hilog:libhilog",
    "webview:libnweb",
    "window_manager:libwm",
  ]
}

group("unittest") {
  testonly = true
  deps = [
    ":arkweb_interface_test",
  ]
}

