import("//base/web/webview/web_aafwk.gni")
import("//build/config/features.gni")
import("//build/test.gni")

ohos_fuzztest("SaveHttpAuthCredentialsFuzzTest") {
  module_out_path = webview_fuzz_test_path
  fuzz_config_file = "$webview_path/test/fuzztest/ohos_adapter/distributeddatamgr_adapter/webdatabase/savehttpauthcredentials_fuzzer"

  include_dirs = [
    "$webview_path/test/ohos_nweb",
    "$webview_path/ohos_adapter/distributeddatamgr_adapter/webdatabase/include",
    "$webview_path/test/fuzztest",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "savehttpauthcredentials_fuzzer.cpp" ]
  deps = [ "$webview_path/ohos_adapter:nweb_ohos_adapter" ]

  external_deps = [ "relational_store:native_rdb" ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":SaveHttpAuthCredentialsFuzzTest",
  ]
}
