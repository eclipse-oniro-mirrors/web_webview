#####################hydra-fuzz###################
import("//base/web/webview/web_aafwk.gni")
import("//build/config/features.gni")
import("//build/test.gni")
import("$webview_path/config.gni")

##############################fuzztest##########################################
ohos_fuzztest("ApplySocPerfConfigByIdFuzzTest") {
  module_out_path = webview_fuzz_test_path
  fuzz_config_file = "$webview_path/test/fuzztest/ohos_adapter/soc_perf_adapter/applysocperfconfigbyid_fuzzer"
  include_dirs = [
    "$webview_path/ohos_adapter/interfaces",
    "$webview_path/ohos_adapter/soc_perf_adapter/include",
    "$webview_path/test/fuzztest",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "applysocperfconfigbyid_fuzzer.cpp" ]
  deps = [
    "$webview_path/ohos_adapter:nweb_ohos_adapter",
    "$webview_path/ohos_nweb:libnweb",
  ]

  external_deps = [ "c_utils:utils" ]

  if (webview_soc_perf_enable) {
    external_deps += [ "soc_perf:socperf_client" ]
    defines = [ "NWEB_SOC_PERF" ]
  }
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":ApplySocPerfConfigByIdFuzzTest",
  ]
}
