import("//base/web/webview/web_aafwk.gni")
import("//build/config/features.gni")
import("//build/test.gni")
import("$webview_path/config.gni")

##############################fuzztest##########################################
ohos_fuzztest("FlowBufferAdapterImplFuzzTest") {
  module_out_path = webview_fuzz_test_path
  fuzz_config_file =
      "$webview_path/test/fuzztest/ohos_adapter/flowbufferadapter_fuzzer"
  include_dirs = [
    "$webview_path/ohos_adapter/interfaces",
    "$webview_path/ohos_adapter/flowbuffer_adapter/include",
    "$webview_path/test/fuzztest",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "flowbufferadapterimpl_fuzzer.cpp" ]
  deps = [
    "$webview_path/ohos_adapter:nweb_ohos_adapter",
    "$webview_path/ohos_nweb:libnweb",
  ]

  external_deps = [
    "c_utils:utils",
    "eventhandler:libeventhandler",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":FlowBufferAdapterImplFuzzTest",
  ]
}
